<%- include("template/cabecera", {titleWeb: 'Crear nueva mascota'}) %>

<div class="container">
	<h1>Crear</h1>
	<form action="/mascotas" method="POST">
		<input
			type="text"
			class="form-control my-2"
			placeholder="Agregar nombre"
			name="name"
		/>
		<input
			type="text"
			class="form-control my-2"
			placeholder="Agregar tipo de mascota"
			name="kindOfPet"
		/>
		<input
			type="text"
			class="form-control my-2"
			placeholder="Agregar raza"
			name="race"
		/>
		<button type="submit" class="btn btn-success btn-block">Agregar</button>
	</form>
</div>

